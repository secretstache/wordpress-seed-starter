{
  "name": "secretstache/wordpress-starter",
  "type": "wordpress-theme",
  "license": "MIT",
  "description": "WordPress starter theme based on the Sage framework",
  "keywords": [
    "wordpress"
  ],
  "autoload": {
    "psr-4": {
      "App\\": "app/"
    }
  },
  "require": {
    "php": ">=8.1",
    "roots/acorn": "^4.0",
    "roots/acorn-prettify": "^1.0.0",
    "secretstache/wordpress-core": "^1.0.0",
    "johnbillion/extended-cpts": "^4.3",
    "stoutlogic/acf-builder": "^1.9"
  },
  "require-dev": {
    "laravel/pint": "^1.13",
    "symfony/process": "^6.4"
  },
  "suggest": {
    "log1x/sage-directives": "A collection of useful Blade directives for WordPress and Sage (^1.0)."
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true,
    "allow-plugins": {
      "composer/installers": true
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "scripts": {
    "post-create-project-cmd": [
      "App\\ComposerScripts::postCreateProject"
    ],
    "setup-theme-boilerplate": [
      "App\\ComposerScripts::setupThemeBoilerplate"
    ],
    "setup-static-boilerplate": [
      "App\\ComposerScripts::setupStaticBoilerplate"
    ]
  },
  "extra": {
    "acorn": {
      "providers": [
        "App\\Providers\\ThemeServiceProvider"
      ]
    }
  }
}
